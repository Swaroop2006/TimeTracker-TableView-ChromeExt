{
  "manifest_version": 3,
  "name": "Time Tracker",
  "version": "1.0",
  "description": "Tracks the time spent on each website and visualizes it.",
  "permissions": ["storage", "activeTab"],
  "background": { "service_worker": "background.js" },
  "host_permissions": ["<all_urls>"],
  "action": { "default_popup": "popup.html" }
}